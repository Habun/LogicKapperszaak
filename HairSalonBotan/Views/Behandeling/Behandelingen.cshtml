@model HairSalonBotan.Models.BehandelingVM

@{
    ViewBag.Title = "Behandelingen";
}
<h2>Behandelingen</h2>

<p>
    @Html.ActionLink("Voeg nieuw behandeling toe", "CreateBehandeling")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.categorieVM.categorienaam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.omschrijving)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bedrag)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.behandelingUI)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategorieinfoUi.Categorienaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
            <td>
                € @Html.DisplayFor(modelItem => item.Bedrag)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { behandelingId = item.BehandelingsId }) |
                @Html.ActionLink("Delete", "VerwijderBehandeling",new { behandelingId = item.BehandelingsId })
            </td>
        </tr>
    }

</table>
